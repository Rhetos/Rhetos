<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2011/08/nuspec.xsd">
  <metadata>
    <id>Rhetos</id>
    <version>4.0.0-dev</version>
    <authors>Omega software</authors>
    <owners>Omega software</owners>
    <licenseUrl>http://opensource.org/licenses/AGPL-3.0</licenseUrl>
    <projectUrl>https://github.com/rhetos/rhetos</projectUrl>
    <description>Rhetos is a DSL framework that enables you to create your own domain-specific language to build server applications.</description>
    <copyright>Copyright Omega software 2013</copyright>
    <tags>Rhetos</tags>
    <dependencies>
      <dependency id="Autofac" version="4.9.4" />
      <dependency id="Autofac.Wcf" version="4.1.0" />
      <dependency id="EntityFramework" version="6.1.3" />
      <dependency id="Microsoft.Web.Xdt" version="2.1.1" />
      <dependency id="Newtonsoft.Json" version="12.0.2" />
      <dependency id="NLog" version="4.6.7" />
      <dependency id="NuGet.Core" version="2.14.0" />
