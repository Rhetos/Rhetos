<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2011/08/nuspec.xsd">
  <metadata>
    <id>Rhetos.MSBuild</id>
    <version>5.7.0-dev</version>
    <authors>Omega software</authors>
    <owners>Omega software</owners>
    <license type="expression">AGPL-3.0-only</license>
    <projectUrl>https://github.com/rhetos/rhetos</projectUrl>
    <description>MSBuild integration with Rhetos CLI, for Rhetos DSL framework.</description>
    <copyright>Copyright Omega software 2013</copyright>
    <tags>Rhetos</tags>
    <dependencies>
      <dependency id="Rhetos" version="[5.7.0-dev,5.8.0)" />
    </dependencies>
  </metadata>
  <files>
    <!-- Rhetos 'build' needs to be on net6, so that is can load plugins from net5 and net6 libraries. -->
    <file src="RhetosCli\bin\Debug\net6.0\*.dll" target="tools" />
    <file src="RhetosCli\bin\Debug\net6.0\rhetos.exe" target="tools" />
    <file src="RhetosCli\bin\Debug\net6.0\rhetos.exe.nlog" target="tools" />
    <file src="RhetosCli\bin\Debug\net6.0\rhetos.deps.json" target="tools" />
    <file src="RhetosCli\bin\Debug\net6.0\rhetos.runtimeconfig.json" target="tools" />
    <file src="RhetosCli\bin\Debug\net6.0\runtimes\**\*" target="tools/runtimes" />

    <file src="MsBuildIntegration\Rhetos.MSBuild.targets" target="build" />
    <file src="MsBuildIntegration\Rhetos.MSBuild.props" target="build" />

    <file src="RhetosVSIntegration\bin\Debug\netstandard2.0\*.dll" target="build" />
    <file src="RhetosVSIntegration\bin\Debug\netstandard2.0\*.json" target="build" />
  </files>
</package>
